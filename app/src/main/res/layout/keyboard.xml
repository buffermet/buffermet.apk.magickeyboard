<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="111pt"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <buffermet.apk.magickeyboard.MagicKeyboardView android:id="@+id/magicKeyboardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelTextSize="8pt"
        android:background="@drawable/empty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <RelativeLayout android:id="@+id/relativeLayoutEmojiKeyboardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/magicKeyboardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/magicKeyboardView"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>
