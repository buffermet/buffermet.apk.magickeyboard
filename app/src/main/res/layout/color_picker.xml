<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical">
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:orientation="horizontal">
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="R"
          android:textSize="16sp"
          android:textColor="#fff"
          app:fontFamily="sans-serif-medium"
          android:layout_gravity="center_vertical"/>
        <SeekBar android:id="@+id/seekBarRedColor"
          android:layout_width="248dp"
          android:layout_height="32dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:progressBackgroundTint="#fff"
          android:progress="0"
          android:max="255"/>
        <TextView android:id="@+id/textViewRedValue"
          android:layout_width="32dp"
          android:layout_height="wrap_content"
          android:text="255"
          android:textSize="16sp"
          android:textColor="#fff"
          app:fontFamily="sans-serif-medium"
          android:layout_gravity="center_vertical"
          android:gravity="end"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:orientation="horizontal">
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="G"
          android:textSize="16sp"
          android:textColor="#fff"
          app:fontFamily="sans-serif-medium"
          android:layout_gravity="center_vertical"/>
        <SeekBar android:id="@+id/seekBarGreenColor"
          android:layout_width="248dp"
          android:layout_height="32dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:progressBackgroundTint="#fff"
          android:progress="0"
          android:max="255"/>
        <TextView android:id="@+id/textViewGreenValue"
          android:layout_width="32dp"
          android:layout_height="wrap_content"
          android:text="255"
          android:textSize="16sp"
          android:textColor="#fff"
          app:fontFamily="sans-serif-medium"
          android:layout_gravity="center_vertical"
          android:gravity="end"/>
    </LinearLayout>
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:orientation="horizontal">
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="B"
          android:textSize="16sp"
          android:textColor="#fff"
          app:fontFamily="sans-serif-medium"
          android:layout_gravity="center_vertical"/>
        <SeekBar android:id="@+id/seekBarBlueColor"
          android:layout_width="248dp"
          android:layout_height="32dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:progressBackgroundTint="#fff"
          android:progress="0"
          android:max="255"/>
        <TextView android:id="@+id/textViewBlueValue"
          android:layout_width="32dp"
          android:layout_height="wrap_content"
          android:text="255"
          android:textSize="16sp"
          android:textColor="#fff"
          app:fontFamily="sans-serif-medium"
          android:layout_gravity="center_vertical"
          android:gravity="end"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
        <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/circle"
          android:backgroundTint="#fff"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintBottom_toBottomOf="parent">
            <RelativeLayout android:id="@+id/relativeLayoutColorPickerColorDot"
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:layout_margin="2dp"
              android:background="@drawable/circle"
              android:backgroundTint="#000"/>
        </RelativeLayout>
        <TextView android:id="@+id/textView1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="#"
          android:textColor="#fff"
          android:textSize="16sp"
          app:fontFamily="sans-serif-medium"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintEnd_toStartOf="@id/editTextColorPickerHexValue"
          app:layout_constraintRight_toLeftOf="@id/editTextColorPickerHexValue"
          app:layout_constraintBottom_toBottomOf="parent"/>
        <EditText android:id="@+id/editTextColorPickerHexValue"
          android:layout_width="72dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:paddingBottom="8dp"
          android:digits="abcdefABCDEF0123456789"
          android:maxLength="6"
          android:text="--"
          android:textColor="#fff"
          android:textSize="16sp"
          app:fontFamily="sans-serif-medium"
          android:background="@drawable/input_black"
          android:gravity="center"
          android:layout_gravity="start"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>